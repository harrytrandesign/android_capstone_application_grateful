<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!-- FirebaseUI Theme Customizations -->
    <style name="FirebaseAuthActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="SignInTheme" parent="FirebaseUI">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/FirebaseAuthActionBarStyle</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionMenuTextColor">@style/DrawerIconStyle</item>
    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorPrimary</item>
    </style>

    <!-- Layout Object Styles -->
    <style name="text_font_color">
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="text_font_black">
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="item_layout_textview" parent="text_font_color">
    </style>

    <!-- TextView -->
    <style name="textview_header_style" parent="text_font_color">
        <item name="android:layout_marginBottom">@dimen/padding_xsmall</item>
        <item name="android:layout_marginTop">@dimen/padding_xlarge</item>
        <item name="android:paddingEnd">@dimen/padding_standard</item>
        <item name="android:paddingStart">@dimen/padding_standard</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_xstandard</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_recyclerview_header">
        <item name="android:paddingBottom">@dimen/padding_tiny</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_four</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_standard</item>
    </style>

    <!-- EditText -->
    <style name="submit_edittext_field" parent="text_font_color">
        <item name="android:layout_marginTop">@dimen/padding_xsmall</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="submit_edit_field_hint" parent="text_font_color">
        <item name="android:paddingEnd">@dimen/padding_xsmall</item>
        <item name="android:paddingStart">@dimen/padding_xsmall</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <!-- Radio || Switch Buttons-->
    <style name="radio_button" parent="text_font_color">
        <item name="android:onClick">onRadioButtonClicked</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>

    <!-- Submit Button Styling -->
    <style name="submit_textview_button">
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <!-- Divider Lines -->
    <style name="horizontal_divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/color_text_primary</item>
        <item name="android:layout_marginTop">@dimen/padding_tiny</item>
        <item name="android:layout_marginBottom">@dimen/padding_tiny</item>
    </style>

    <style name="AlertDialogCustom" parent="AlertDialog.AppCompat.Light">
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:background">@color/white_transparent_frost</item>
    </style>

    <style name="edittext_floating_bubble">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/padding_xsmall</item>
        <item name="android:background">@drawable/drawable_blue_edittext_bubble_frame</item>
        <item name="android:paddingBottom">@dimen/padding_xsmall</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingTop">@dimen/padding_xsmall</item>
    </style>

    <style name="floating_action_button">
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_marginBottom">@dimen/padding_xsmall</item>
        <item name="android:layout_marginEnd">@dimen/padding_xsmall</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:tint">@color/color_text_white</item>
    </style>

    <style name="floating_action_button_submit">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/padding_xsmall</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:tint">@color/color_text_white</item>
    </style>

    <style name="submit_post_text_label">
        <item name="android:padding">@dimen/padding_xsmall</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">@dimen/font_standard</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="submit_post_tag_label">
        <item name="android:layout_marginTop">@dimen/padding_xsmall</item>
        <item name="android:paddingEnd">@dimen/padding_xsmall</item>
        <item name="android:paddingStart">@dimen/padding_xsmall</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinner_submit_selection_style">
        <item name="android:paddingEnd">@dimen/padding_xsmall</item>
        <item name="android:paddingStart">@dimen/padding_xsmall</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="spinner_mood_layout">
        <item name="android:padding">@dimen/padding_xsmall</item>
        <item name="android:textSize">@dimen/font_standard</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="submit_post_edit_text_field">
        <item name="android:layout_margin">@dimen/padding_xsmall</item>
        <item name="android:background">@drawable/drawable_border</item>
        <item name="android:elevation">@dimen/padding_tiny</item>
        <item name="android:gravity">top|start</item>
        <item name="android:padding">@dimen/padding_xsmall</item>
        <item name="android:textSize">@dimen/font_standard</item>
    </style>

    <style name="tag_fragment_text_label">
        <item name="android:padding">@dimen/padding_xsmall</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="feedback_submit_label">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/font_tiny</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recycler_view_for_fragment">
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">@dimen/padding_three</item>
    </style>

    <style name="linear_layout_spec">
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_xsmall</item>
        <item name="android:paddingStart">@dimen/padding_xsmall</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
    </style>

    <style name="emoji_icon_text_image">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="single_post_public_indicator">
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:layout_marginTop">@dimen/padding_xsmall</item>
        <item name="android:gravity">center|bottom</item>
    </style>

    <style name="single_post_feeling_label">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_standard</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="single_post_date_label">
        <item name="android:layout_marginTop">@dimen/padding_xsmall</item>
        <item name="android:textSize">@dimen/font_tiny</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="single_post_message_label">
        <item name="android:layout_marginTop">@dimen/padding_xsmall</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="single_post_tag_label">
        <item name="android:layout_marginTop">@dimen/padding_xsmall</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="single_post_submitted_label">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="single_post_comment_link_label">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_tiny</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="comment_display_name">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="comment_date_posted_label">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
























