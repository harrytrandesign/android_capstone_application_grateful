<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_tiny"
    android:layout_marginTop="@dimen/padding_tiny"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_tiny"
        android:paddingTop="@dimen/padding_tiny">

        <ImageView
            android:id="@+id/iv_icon_entry_type"
            android:layout_width="@dimen/icon_xmedium"
            android:layout_height="@dimen/icon_xmedium"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/padding_xsmall"
            android:layout_marginEnd="@dimen/padding_medium"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_xsmall"
            android:src="@drawable/post"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_tv_post_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_post_displayname"
                android:textColor="@color/color_text_white"
                android:textSize="@dimen/font_standard"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_tv_post_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_post_short_text"
                android:textColor="@color/color_text_white"
                android:textSize="@dimen/font_standard"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_tv_journal_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_post_long_text"
                android:textColor="@color/color_text_white"
                android:textSize="@dimen/font_small"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_tv_post_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/item_tv_timestamp"
                    android:textColor="@color/color_text_white"
                    android:textSize="@dimen/font_mini"/>

                <TextView
                    android:id="@+id/item_tv_comment_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/item_tv_timestamp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/color_text_white"
                    android:textSize="@dimen/font_mini"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/horizontal_view"/>

</LinearLayout>