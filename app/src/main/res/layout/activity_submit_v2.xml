<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.htdwps.grateful.SubmitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_submit_message_tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_xlarge"
            android:paddingEnd="@dimen/padding_standard"
            android:paddingStart="@dimen/padding_standard"
            android:text="@string/submit.grateful.title"
            android:textColor="@color/color_text_primary"
            android:textSize="@dimen/font_xstandard"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_margin="@dimen/padding_xsmall">

            <ImageView
                android:id="@+id/iv_image_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_text_primary"/>

            <TextView
                android:id="@+id/tv_text_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/padding_xlarge"
                android:background="@color/grey_transparent_dark"
                android:gravity="center_horizontal|center_vertical"
                android:padding="@dimen/padding_xsmall"
                android:textColor="@color/color_text_white"
                android:textSize="@dimen/font_standard"
                android:textStyle="bold"
                android:visibility="invisible"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_preview_post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Preview"/>

        <TextView
            android:id="@+id/submit_hint_post"
            style="@style/submit_edit_field_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit.hint.post"
            android:textColor="@color/color_text_primary"/>

        <EditText
            android:id="@+id/et_grateful_post_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textAutoComplete|textAutoCorrect|textShortMessage"
            android:maxLength="300"/>

        <TextView
            android:id="@+id/tv_upload_image_button"
            style="@style/submit_textview_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/padding_xsmall"
            android:background="@color/color_text_white"
            android:elevation="1dp"
            android:text="@string/submit_upload_image"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/tv_submit_button"
            style="@style/submit_textview_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_xsmall"
            android:layout_marginStart="@dimen/padding_xsmall"
            android:background="@color/colorPrimaryDark"
            android:elevation="1dp"
            android:text="@string/submit.button"
            android:textColor="@color/color_text_white"/>

    </LinearLayout>

</RelativeLayout>