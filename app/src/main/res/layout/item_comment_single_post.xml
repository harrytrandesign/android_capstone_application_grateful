<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_three"
    android:padding="@dimen/padding_xsmall"
    app:cardElevation="@dimen/padding_tiny">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_xsmall">

        <TextView
            android:id="@+id/tv_comment_main_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            tools:text="Test comment"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_comment_creator_field"
                style="@style/comment_display_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="By Person"/>

            <TextView
                android:id="@+id/tv_comment_date_posted_field"
                style="@style/comment_date_posted_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="June 06, 2018"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>