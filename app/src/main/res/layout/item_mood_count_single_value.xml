<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large">

        <TextView
            android:id="@+id/tv_emoji_type_icon_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_large"
            tools:text=":)"/>

        <TextView
            android:id="@+id/tv_mood_count_value_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_xsmall"
            android:textSize="@dimen/font_standard"
            app:layout_constraintTop_toBottomOf="@id/tv_emoji_type_icon_placeholder"
            tools:text="12"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>